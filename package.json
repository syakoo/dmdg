{
  "name": "@syakoo/dmdg",
  "version": "0.1.0",
  "description": "dir module dependency graph",
  "main": "./dist/index.js",
  "bin": {
    "dmdg": "./bin/dmdg.js"
  },
  "scripts": {
    "prepare": "npx simple-git-hooks",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --ignore-path .eslintignore --cache .",
    "lint:prettier": "prettier --ignore-path .eslintignore --cache . --check",
    "fix": "run-s fix:*",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "build": "rimraf dist && rollup -c",
    "publish": "npm run build && npm publish"
  },
  "files": [
    "package.json",
    "README.md",
    "LICENSE",
    "dist"
  ],
  "homepage": "",
  "keywords": [],
  "author": "syakoo",
  "license": "MIT",
  "dependencies": {
    "cac": "^6.7.12",
    "dependency-cruiser": "^11.14.1"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.4",
    "@syakoo/emoji-prefix-commit": "github:syakoo/emoji-prefix-commit",
    "@types/node": "^18.6.3",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-define-config": "^1.6.0",
    "eslint-import-resolver-typescript": "^3.4.0",
    "eslint-plugin-import": "^2.26.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.77.2",
    "simple-git-hooks": "^2.8.0",
    "typescript": "^4.7.4"
  },
  "simple-git-hooks": {
    "commit-msg": "npx emoji-prefix-commit",
    "pre-commit": "npm run lint"
  }
}
